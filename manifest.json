{
    "name": "Avalan",
    "version": "1.4",
    "manifest_version": 3,
    "icons": {
      "16": "avalan_icon.png",
      "48": "avalan_icon.png",
      "128": "avalan_icon.png"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
          "matches": ["https://www.instagram.com/*"],
          "js": ["content-script.js", "helpers.js"],
          "css": ["volan.css"]
        }
    ],
    "web_accessible_resources": [{
      "resources": ["/options.html"],
      "matches": [ "<all_urls>" ]
    }]
}